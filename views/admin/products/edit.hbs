{{#>admin}}
{{#*inline 'content'}}
<div class="card">
    <div class="card-header">
        <h2>Edit Product</h2>
    </div>
    <dev class="card-body">
        {{#with viewData.product}}
        <form action="/admin/products/{{getId}}/update" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col">
                    <div class="row mb-3">
                        <div class="col-lg-2 col-md-6 col-sm-12 col-form-label">Name:</div>
                        <div class="col-lg-10 col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="name" value="{{getName}}" required>
                        </div>

                    </div>
                </div>
                <div class="col">
                    <div class="row mb-3">
                        <div class="col-lg-2 col-md-6 col-sm-12 col-form-label">Price:</div>
                        <div class="col-lg-10 col-md-6 col-sm-12">
                            <input type="number" class="form-control" name="price" value="{{getPrice}}" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="row mb-3">
                        <div class="col-lg-2 col-md-6 col-sm-12 col-form-label">Image:</div>
                        <div class="col-lg-10 col-md-6 col-sm-12 ">
                            <input type="file" class="form-control" name="image">
                        </div>
                    </div>
                </div>
                <div class="col">
                    &nbsp;
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-3 row">
                        <div class="col-lg-2 col-md-6 col-sm-12 col-form-label">Description:</div>
                        <div class="col-lg-10 col-md-6 col-sm-12 ">
                            <textarea name="description" rows="3" class="form-control"
                                required>{{getDescription}}</textarea>
                        </div>
                    </div>
                </div>
                <div class="col">
                    &nbsp;
                </div>
            </div>

            <button type="submit" class="btn btn-dark">Update</button>
        </form>
        {{/with}}

    </dev>
</div>
{{/inline}}
{{/admin}}